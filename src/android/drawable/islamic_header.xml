<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the shape layer with rounded corners and stroke -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Make it white or transparent, as you only want the border and rounded corners -->
            <stroke android:color="#ffffff" android:width="1.5dp"/>
            <corners android:bottomLeftRadius="40dp" android:bottomRightRadius="40dp"/>
        </shape>
    </item>

    <!-- This is the image layer that will sit behind the shape -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <bitmap
            android:src="@drawable/islamic_header_bg"
            android:tileMode="disabled" />
    </item>
</layer-list>
